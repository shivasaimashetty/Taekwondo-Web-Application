@model IEnumerable<Taekwondo.Models.rank>

@{
    ViewBag.Title = "RANK";
}

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<style>

    table, th {
        border: 1px solid black;
        font-family: "Times New Roman", Times,sans-serif;
        width: auto;
    }

    th, td {
        text-align: center;
        padding-top: 5px;
        height: 100px;
        width: inherit;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    th {
        background-color: black;
        color: white;
        text-align: center;
        font-display: block;
        height: 80px;
        width: auto;
        font-color: "solid-black";
    }

    td {
        color: black;
    }

    .button {
        background-color: white;
        color: black;
        border: 2px solid #555555;
        padding: 5px 5px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        font-family: "Times New Roman", Times,sans-serif;
        font-color: "solid-black";
    }

    .button1 {
        background-color: white;
        color: black;
        border: 1px solid #555555;
        padding: 5px 5px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 12px;
        margin: 4px 2px;
        cursor: pointer;
        font-family: "Times New Roman", Times,sans-serif;
        font-color: "solid-black";
    }
</style>

<h2><u><center>RANKING SYSTEM</center></u></h2>
<h3>
    <button class="button " style="font-size:16px">@Html.ActionLink("Add Record", "Create") <i class="material-icons">add_to_photos</i></button>
    </button>
</h3>
<b>
    <table class="table">
        <tr>
            
            <th>
                RANK NAME
            </th>
            <th>
                RANK BELT
            </th>
            <th>
                RANK DESC
            </th>
            <th>
                ACTION REQUIRED
            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
               
                <td>
                    @Html.DisplayFor(modelItem => item.rankname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rankbelt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rankdesc)
                </td>
                <td>
                    <button class="button1" style="font-size:15px">@Html.ActionLink("Edit", "Edit", new { id = item.rankID }) <i class="material-icons">mode_edit</i></button>
                    <button class="button1" style="font-size:15px">@Html.ActionLink("Details", "Details", new { id = item.rankID })<i class="material-icons">description</i></button>
                    <button class="button1" style="font-size:15px">@Html.ActionLink("Delete", "Delete", new { id = item.rankID })<i class="material-icons">delete</i></button>
                </td>
            </tr>
        }

    </table>
</b>
