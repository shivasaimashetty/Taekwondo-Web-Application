@model IEnumerable<Taekwondo.Models.supplier>

@{
    ViewBag.Title = "SUPPLIER";
}
    <html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="css/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="@Url.Content("~/Content/themes/base/minified/jquery-ui.min.css")" rel="stylesheet" />
        <!-- Required jQuery and jQuery UI Javascript references -->
        <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")"></script>
        <script src="@Url.Content("~/Scripts/jquery-ui-1.10.4.min.js")"></script>
    </head>
    <script type="text/javascript">
    $(function () {
        // This will make every element with the class "date-picker" into a DatePicker element
        $('.date-picker').datepicker();
    })
    </script>
    <style>

        table, th {
            border: 1px solid black;
            font-family: "Times New Roman", Times,sans-serif;
            width: auto;
        }

        th, td {
            text-align: center;
            padding-top: 5px;
            height: 100px;
            width: inherit;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        th {
            background-color: black;
            color: white;
            text-align: center;
            font-display: block;
            height: 80px;
            width: auto;
            font-color: "solid-black";
        }

        td {
            color: black;
        }

        .button {
            background-color: white;
            color: black;
            border: 2px solid #555555;
            padding: 5px 5px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            font-family: "Times New Roman", Times,sans-serif;
            font-color: "solid-black";
        }

        .button1 {
            background-color: white;
            color: black;
            border: 1px solid #555555;
            padding: 5px 5px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 12px;
            margin: 4px 2px;
            cursor: pointer;
            font-family: "Times New Roman", Times,sans-serif;
            font-color: "solid-black";
        }
    </style>

    <h2><u><center>SUPPLIER DETAILS</center></u></h2>
    <h3>
        <button class="button " style="font-size:16px">@Html.ActionLink("Add Record", "Create") <i class="material-icons">add_to_photos</i></button>
        </button>
    </h3>
    @using (Html.BeginForm("Index", "suppliers", FormMethod.Get))
    {
        <b>
            <p>
                &nbsp;&nbsp;


                Please Enter the Supplier No: <input type="text" name="supplierID" /> &nbsp;&nbsp;
                Please Select the Supplier Email Id: @Html.DropDownList("email", "All Suppliers")&nbsp;&nbsp;
                <button class="button1" style="font-size:15px"><input type="submit" value="Search" /><i class="material-icons">youtube_searched_for</i></button>
            </p>
        </b>
    }
    <b>
        <table class="table">
            <tr>
                <th>
                    SUPPLIER NUMBER
                </th>
                <th>
                    SUPPLIER FIRST NAME
                </th>
                <th>
                    SUPPLIER LAST NAME
                </th>
                <th>
                    SUPPLIER EMAIL
                </th>
                <th>
                    SUPPLIER PHONE NUMBER
                </th>
                <th>
                    SUPPLIER ADDRESS1
                </th>
                <th>
                    SUPPLIER ADDRESS2
                </th>
                <th>
                    SUPPLIER CITY
                </th>
                <th>
                    SUPPLIER PROVINCE
                </th>
                <th>
                    SUPPLIER ZIPCODE
                </th>
                <th>
                    ACTION REQUIRED
                </th>

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.supplierID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.lname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.phonenumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.address1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.address2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.city)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.province)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.zipcode)
                    </td>
                    <td>
                        <button class="button1" style="font-size:15px">@Html.ActionLink("Edit", "Edit", new { id = item.supplierID })<i class="material-icons">mode_edit</i></button>
                        <button class="button1" style="font-size:15px">@Html.ActionLink("Details", "Details", new { id = item.supplierID })<i class="material-icons">description</i></button>
                        <button class="button1" style="font-size:15px">@Html.ActionLink("Delete", "Delete", new { id = item.supplierID })<i class="material-icons">delete</i></button>
                    </td>
                </tr>
            }

        </table>
    </b>
