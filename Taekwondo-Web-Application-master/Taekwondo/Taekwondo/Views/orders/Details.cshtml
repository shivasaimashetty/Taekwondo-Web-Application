@model Taekwondo.Models.order

@{
    ViewBag.Title = "Details";
}

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.7.0/css/all.css' integrity='sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ' crossorigin='anonymous'>
</head>
    </head>
<style>

    div {
        font-family: "Times New Roman", Times,sans-serif;
    }


    .button1 {
        background-color: white;
        color: black;
        border: 1px solid #555555;
        padding: 5px 5px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 12px;
        margin: 4px 2px;
        cursor: pointer;
        font-family: "Times New Roman", Times,sans-serif;
        font-color: "solid-black";
    }
</style>
<b>
    <h2><u><center>ORDER DETAILS</center></u></h2>

    <div>
        <dl class="dl-horizontal">
            <hr />
            <dt>
                UNIT PRICE
            </dt>

            <dd>
                @Html.DisplayFor(model => model.unitprice)
            </dd>

            <dt>
                QUANTITY
            </dt>

            <dd>
                @Html.DisplayFor(model => model.quantity)
            </dd>

            <dt>
                ORDER DATE
            </dt>

            <dd>
                @Html.DisplayFor(model => model.orderdate)
            </dd>

            <dt>
                PRODUCT NAME
            </dt>

            <dd>
                @Html.DisplayFor(model => model.product.productname)
            </dd>

            <dt>
                SUPPLIER FIRST NAME
            </dt>

            <dd>
                @Html.DisplayFor(model => model.supplier.fname)
            </dd>

        </dl>
    </div>
    <br />
    <p>
        <button class="button1" style="font-size:20px"> @Html.ActionLink("Go Back", "Index")<i class='fas fa-arrow-alt-circle-left'></i></button>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <button class="button1" style="font-size:18px">@Html.ActionLink("Edit Details", "Edit", new { id = Model.orderID })<i class="material-icons">mode_edit</i></button>

    </p>
</b>

